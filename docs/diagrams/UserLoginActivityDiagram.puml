@startuml
!pragma useVerticalIf on
start
:User executes login command;
:Parse command string;

if () then ([else])
    :Throw CommandException with
    missing fields error message;
([all fields are filled]) elseif () then ([user is already logged in])
    :Throw CommandException with
    already logged in error message;
([else]) elseif () then ([else])
    :Throw CommandException with
    wrong credentials error message;
else ([fields matches
    stored user])
    :User login command is executed successfully.
    User is now logged in.;
endif

stop
@enduml
